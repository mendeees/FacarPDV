@model Domain.Domain.Produto
@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-center">
                    <h4 class="mb-0 fw-bold text-dark">@ViewData["Title"]</h4>
                </div>

                <div class="card-body p-4">
                    @if (TempData["Erro"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Erro"]</div>
                    }

                    <form asp-action="Editar" method="post" autocomplete="off">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <input type="hidden" asp-for="ProdutoId" />

                        <div class="mb-3">
                            <label class="form-label">Nome</label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Descrição</label>
                            <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Preço</label>
                            <input asp-for="Preco" type="number" class="form-control" step="0.01" />
                            <span asp-validation-for="Preco" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-controller="Pesquisa" asp-action="PesquisaProduto" class="btn btn-outline-secondary me-2">
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
