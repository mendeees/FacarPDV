@model Domain.Domain.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-center">
                    <h4 class="mb-0 fw-bold text-dark">@ViewData["Title"]</h4>
                </div>

                <div class="card-body p-4">
                    @if (TempData["Erro"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Erro"]</div>
                    }

                    <form asp-action="Editar" method="post" autocomplete="off">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <input type="hidden" asp-for="ProdutoId" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="nome" class="form-label">Nome</label>
                                <input type="text" asp-for="Nome" id="nome" class="form-control" placeholder="Digite o nome do produto" required />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label for="preco" class="form-label">Preço Unitário</label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input type="decimal" step="0.01" asp-for="Preco" id="preco" class="form-control" placeholder="0,00" required />
                                </div>
                                <span asp-validation-for="Preco" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="descricao" class="form-label">Descrição</label>
                                <textarea asp-for="Descricao" id="descricao" rows="3" class="form-control" placeholder="Digite uma descrição detalhada" required style="resize: vertical; min-height: 80px; max-height: 200px;"></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-success me-2 px-4">
                                <i class="bi bi-check-circle"></i> Salvar
                            </button>
                            <a asp-controller="Pesquisa" asp-action="PesquisaProduto" class="btn btn-danger px-4">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
