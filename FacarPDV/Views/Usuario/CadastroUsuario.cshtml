@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-center">
                    <h4 class="mb-0 fw-bold text-dark">@ViewData["Title"]</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post" autocomplete="off">
                        <div class="row mb-3">
                            <div class="col-md-2">
                                <label for="codigo" class="form-label">Código</label>
                                <input type="number" name="codigo" id="codigo" class="form-control" placeholder="Código" required />
                            </div>

                            <div class="col-md-10">
                                <label for="nome" class="form-label">Nome</label>
                                <input type="text" name="nome" id="nome" class="form-control" placeholder="Digite o nome" required />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="login" class="form-label">Login</label>
                                <input type="text" name="login" id="login" class="form-control" placeholder="Digite o login" required />
                            </div>

                            <div class="col-md-6">
                                <label for="senha" class="form-label">Senha</label>
                                <div class="input-group">
                                    <input type="password" name="senha" id="senha" class="form-control" placeholder="Digite a senha" required />
                                    <button type="button" class="btn btn-outline-warning" id="toggleSenha">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-success me-2 px-4">
                                <i class="bi bi-check-circle"></i> Salvar
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-danger px-4">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const senhaInput = document.getElementById("senha");
        const toggleSenha = document.getElementById("toggleSenha");
        const icon = toggleSenha.querySelector("i");

        toggleSenha.addEventListener("click", () => {
            const isPassword = senhaInput.type === "password";
            senhaInput.type = isPassword ? "text" : "password";
            icon.classList.toggle("bi-eye");
            icon.classList.toggle("bi-eye-slash");
        });
    </script>
}
