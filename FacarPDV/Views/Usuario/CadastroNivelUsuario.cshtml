@model IEnumerable<Domain.Domain.NivelUsuario>
@{
    ViewData["Title"] = "Cadastro de Nível de Usuário";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-center">
                    <h4 class="mb-0 fw-bold text-dark">@ViewData["Title"]</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="CreateNivelUsuario" method="post" autocomplete="off">
                        <div class="mb-3">
                            <label for="descricao" class="form-label">Descrição do Nível</label>
                            <input type="text" name="descricao" id="descricao" class="form-control"
                                   placeholder="Ex: Administrador, Caixa, Supervisor" required />
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-success me-2 px-4">
                                <i class="bi bi-check-circle"></i> Salvar
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-danger px-4">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>

                    <div class="mt-5">
                        <h5 class="fw-bold text-dark mb-3">Níveis cadastrados</h5>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th class="text-center">Código</th>
                                        <th>Descrição</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Any())
                                    {
                                        @foreach (var nivel in Model)
                                        {
                                            <tr>
                                                <td class="text-center">@nivel.Id</td>
                                                <td>@nivel.Descricao</td>
                                                <td class="text-center">
                                                    <a asp-action="AlterarNivelUsuario" asp-route-id="@nivel.Id"
                                                       class="btn btn-warning btn-sm me-1">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </a>
                                                    <a asp-action="ExcluirNivelUsuario" asp-route-id="@nivel.Id"
                                                       class="btn btn-danger btn-sm">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="3" class="text-center text-muted">
                                                Nenhum nível cadastrado
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
