@{
    ViewData["Title"] = "Alterar Nível de Usuário";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-center">
                    <h4 class="mb-0 fw-bold text-dark">@ViewData["Title"]</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="UpdateNivelUsuario" method="post" autocomplete="off">
                        <div class="row mb-4">
                            <div class="col-md-2">
                                <label for="codigoUsuario" class="form-label">Código</label>
                                <input type="text" id="codigoUsuario" name="codigoUsuario" class="form-control" placeholder="Cód. Usuário" />
                            </div>

                            <div class="col-md-6">
                                <label for="nome" class="form-label">Nome</label>
                                <div class="input-group">
                                    <input type="text" id="nome" name="nome" class="form-control" placeholder="Nome do Usuário" readonly />
                                    <button type="button" class="btn btn-outline-warning">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label for="nivel" class="form-label">Nível de Usuário</label>
                                <select id="nivel" name="nivel" class="form-select" required>
                                    <option value="">Selecione...</option>
                                    <option value="1">Administrador</option>
                                    <option value="2">Caixa</option>
                                    <option value="3">Supervisor</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-success me-2 px-4">
                                <i class="bi bi-check-circle"></i> Salvar Alterações
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-danger px-4">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>

                    <div class="mt-5">
                        <h5 class="fw-bold text-dark mb-3">Usuários cadastrados</h5>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th class="text-center">Código</th>
                                        <th>Nome</th>
                                        <th class="text-center">Login</th>
                                        <th class="text-center">Nível Atual</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">
                                            Nenhum usuário encontrado
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
