@model IEnumerable<Domain.Domain.Estoque>

@{
    ViewData["Title"] = "Pesquisa de Estoque";

    var totalRegistros = Model.Count();
    var totalQuantidade = Model.Sum(x => x.Quantidade);
    string qProduto = ViewBag.FiltroProduto as string ?? "";
    string qCodigo = ViewBag.FiltroCodigo as string ?? "";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-11">
            <div class="card shadow border-0">
                <div class="card-header bg-warning text-dark text-center">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>

                <div class="card-body p-4">
                    <!-- FILTROS -->
                    <form method="get" asp-controller="Pesquisa" asp-action="PesquisaEstoque" autocomplete="off" class="mb-4">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-2">
                                <label for="codigo" class="form-label">Código</label>
                                <input type="text" id="codigo" name="codigo" value="@qCodigo"
                                       class="form-control" placeholder="Código do produto" />
                            </div>

                            <div class="col-md-8">
                                <label for="produto" class="form-label">Produto</label>
                                <div class="input-group">
                                    <input type="text" id="produto" name="produto" value="@qProduto"
                                           class="form-control" placeholder="Digite o nome do produto" />
                                    <button type="submit" class="btn btn-outline-warning">
                                        <i class="bi bi-search"></i> Buscar
                                    </button>
                                </div>
                            </div>

                            <div class="col-md-2 d-flex align-items-end gap-2">
                                <a asp-controller="Estoque" asp-action="Entrada" class="btn btn-outline-success flex-fill">
                                    <i class="bi bi-box-arrow-in-down"></i> Nova Entrada
                                </a>
                            </div>
                        </div>
                    </form>

                    <div class="row">
                        <div class="col-lg-8">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover align-middle">
                                    <thead class="table-dark">
                                        <tr>
                                            <th style="width:10%">Código</th>
                                            <th style="width:45%">Produto</th>
                                            <th style="width:15%" class="text-center">Quantidade</th>
                                            <th style="width:30%" class="text-end">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (!Model.Any())
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center text-muted">Nenhum produto encontrado no estoque.</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (var e in Model)
                                            {
                                                <tr>
                                                    <td>@e.ProdutoId</td>
                                                    <td>@(e.Produto != null ? e.Produto.Nome : "(Sem nome)")</td>
                                                    <td class="text-center fw-bold">@e.Quantidade</td>
                                                    <td class="text-end">
                                                        <!-- Corrigido: controller explicitado -->
                                                        <a asp-controller="Estoque" asp-action="Entrada" asp-route-id="@e.ProdutoId"
                                                           class="btn btn-success btn-sm me-1" title="Registrar entrada">
                                                            <i class="bi bi-box-arrow-in-down"></i>
                                                        </a>
                                                        <a asp-controller="Estoque" asp-action="Saida" asp-route-id="@e.ProdutoId"
                                                           class="btn btn-danger btn-sm me-1" title="Registrar saída">
                                                            <i class="bi bi-box-arrow-up"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <div class="card border-0 shadow-sm mb-3">
                                <div class="card-header bg-light d-flex justify-content-between">
                                    <strong>Resumo do Estoque</strong>
                                    <span class="badge bg-secondary">@totalRegistros registro(s)</span>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Total de Itens</span><span>@totalQuantidade unidade(s)</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between fw-bold">
                                        <span>Última Atualização</span>
                                        <span>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</span>
                                    </li>
                                </ul>
                            </div>

                            @if (TempData["Ok"] != null)
                            {
                                <div class="alert alert-success text-center fw-bold">@TempData["Ok"]</div>
                            }
                            @if (TempData["Erro"] != null)
                            {
                                <div class="alert alert-danger text-center fw-bold">@TempData["Erro"]</div>
                            }

                            <div class="alert alert-info mt-3">
                                Utilize os botões <i class="bi bi-box-arrow-in-down text-success"></i> e
                                <i class="bi bi-box-arrow-up text-danger"></i> para movimentar o estoque.
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
