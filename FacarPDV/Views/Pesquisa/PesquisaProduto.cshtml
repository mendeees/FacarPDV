@{
    ViewData["Title"] = "Pesquisa de Produto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-warning text-center">
                    <h4 class="mb-0 fw-bold text-dark">@ViewData["Title"]</h4>
                </div>

                <div class="card-body p-4">
                    <form method="get" asp-action="PesquisarProduto" autocomplete="off" class="mb-4">
                        <div class="row g-3">
                            <div class="row mb-3 align-items-end">
                                <div class="col-md-2">
                                    <label for="codigoProduto" class="form-label">Código</label>
                                    <input type="text" id="codigoProduto" name="codigoProduto" class="form-control" placeholder="Código" />
                                </div>

                                <div class="col-md-8">
                                    <label for="produto" class="form-label">Produto</label>
                                    <div class="input-group">
                                        <input type="text" id="produto" name="produto" class="form-control" placeholder="Digite ou pesquise o produto" readonly />
                                        <button type="button" class="btn btn-outline-warning">
                                            <i class="bi bi-search"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="bi bi-funnel"></i> Filtrar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Código</th>
                                    <th>Descrição</th>
                                    <th class="text-end">Preço</th>
                                    <th class="text-center">Estoque</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="4" class="text-center text-muted">
                                        Nenhum produto encontrado
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
