@{
    ViewData["Title"] = "Caixa";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow border-0">
                <div class="card-header bg-warning text-white text-center">
                    <h4 class="mb-0 text-black">@ViewData["Title"]</h4>
                </div>

                <div class="card-body p-4">
                    <div class="mb-4">
                        <h5 class="fw-bold mb-3">Vendas</h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Código</th>
                                        <th>Cliente</th>
                                        <th>Data/Hora</th>
                                        <th>Pagamento</th>
                                        <th class="text-end">Valor</th>
                                        <th class="text-center">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>V-1001</td>
                                        <td>Cliente A</td>
                                        <td>20/09/2025 14:30</td>
                                        <td>Dinheiro</td>
                                        <td class="text-end">R$ 120,00</td>
                                        <td class="text-center"><span class="badge bg-success">Pago</span></td>
                                    </tr>
                                    <tr>
                                        <td>V-1002</td>
                                        <td>Cliente B</td>
                                        <td>20/09/2025 15:10</td>
                                        <td>Cartão</td>
                                        <td class="text-end">R$ 85,50</td>
                                        <td class="text-center"><span class="badge bg-success">Pago</span></td>
                                    </tr>
                                    <tr class="table-danger">
                                        <td>V-1003</td>
                                        <td>Cliente C</td>
                                        <td>20/09/2025 16:00</td>
                                        <td>Pix</td>
                                        <td class="text-end">R$ 60,00</td>
                                        <td class="text-center"><span class="badge bg-danger">Cancelado</span></td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr class="fw-bold">
                                        <td colspan="4" class="text-end">Total</td>
                                        <td class="text-end">R$ 205,50</td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-black text-white">
                                    <strong>Resumo Esperado</strong>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Dinheiro</span><span>R$ 120,00</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Cartão</span><span>R$ 85,50</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>Pix</span><span>R$ 0,00</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between fw-bold">
                                        <span>Total</span><span>R$ 205,50</span>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-black text-white d-flex justify-content-between">
                                    <strong>Contagem</strong>
                                    <span class="badge bg-danger">Divergente</span>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label">Dinheiro</label>
                                        <input class="form-control" type="number" step="0.01" placeholder="0,00" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Cartão</label>
                                        <input class="form-control" type="number" step="0.01" placeholder="0,00" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Pix</label>
                                        <input class="form-control" type="number" step="0.01" placeholder="0,00" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Observações</label>
                                        <textarea class="form-control" rows="2" placeholder="Ex.: sangria, troco inicial..."></textarea>
                                    </div>
                                    <button type="button" class="btn btn-success w-100">
                                        <i class="bi bi-check2-circle"></i> Salvar Fechamento
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
